{
    "version": 2,
    "title": "Add logical port to network",
    "subtasks": [{
        "title": "Add logical port to network",
        "workloads": [{
            "name": "OvnNetwork.add_ports_to_network",
            "args": {
                "network_args": {
                    "lswitch_name": "ADD SWITCH NAME"
                },
                "port_create_args" : {
                    "batch": {{ ports_created_batch_size }}
                },
                "ports_per_network": {{ ports_per_network }}
            },
            "runner": {"type": "serial", "times": 1},
            "context": {
                "ovn_multihost" : {
                    "controller": "ovn-controller-node"
                },
                "sandbox":{ "tag": "ToR1"}
            }
        }]
    }]
}
